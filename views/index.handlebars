<h1>Burgers!</h1>

<h2>Burgers some other condition</h2>

<ul>
  {{#each burgers}}
    {{#unless variable1}}
      {{> some other condition}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers some condition</h2>

<ul>
  {{#each burgers}}
    {{#if variable1}}
      {{> somecondition}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="somecondition">some condition</label><br>
    <input type="radio" name="somecondition" value="1" checked> some condition!<br>
    <input type="radio" name="somecondition" value="0"> some other condition
  </div>

  <button type="submit">Add Burger</button>
</form>